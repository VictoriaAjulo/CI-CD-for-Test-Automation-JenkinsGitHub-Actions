pipeline {
    agent any

    stages {
        stage('Unit Test - Backend') {
            agent {
                docker{
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }

            environment {
                HOME = "/tmp"
                GOCACHE = "/tmp/go-build"
                GOPATH = "/tmp/go"
                GOMODCACHE = "/tmp/go/pkg/mod"
            }

            steps {
               dir('bugtracker-backend'){
                    sh 'mkdir -p /tmp/go/pkg/mod /tmp/go-build'
                    sh 'go test -v ./...'
               }
            }
        }
    }
}